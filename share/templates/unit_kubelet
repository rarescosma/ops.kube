[Unit]
Description=Kubernetes Kubelet
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
ExecStartPre=/bin/ln -sf /dev/console /dev/kmsg
ExecStart=/usr/bin/kubelet \
  --logtostderr=true \
  --v=4 \
  --address=${VM_IP} \
  --port=10250 \
  --hostname-override=${VM_HOSTNAME} \
  --cluster-dns="${KUBE_DNS_IP}" \
  --cluster-domain=kubernetes.local \
  --container-runtime=docker \
  --docker=unix:///var/run/docker.sock \
  --kubeconfig=/kube/etc/kubelet/kubeconfig \
  --tls-cert-file=/kube/etc/tls/${CLUSTER}/kubernetes.pem \
  --tls-private-key-file=/kube/etc/tls/${CLUSTER}/kubernetes-key.pem \
  --fail-swap-on=false

Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
