[Unit]
Description=Kubernetes API Server
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
ExecStart=/usr/bin/kube-apiserver \
  --admission-control=NamespaceLifecycle,LimitRanger,SecurityContextDeny,ServiceAccount,ResourceQuota,PodPreset \
  --advertise-address=${VM_IP} \
  --allow-privileged=true \
  --apiserver-count=1 \
  --authorization-mode=RBAC \
  --bind-address=0.0.0.0 \
  --enable-swagger-ui=true \
  --etcd-cafile=/kube/etc/tls/${CLUSTER}/ca.pem \
  --insecure-bind-address=0.0.0.0 \
  --insecure-port=8080 \
  --kubelet-certificate-authority=/kube/etc/tls/${CLUSTER}/ca.pem \
  --etcd-servers=http://127.0.0.1:2379 \
  --service-account-key-file=/kube/etc/tls/${CLUSTER}/kubernetes-key.pem \
  --service-cluster-ip-range=${KUBE_SERVICE_CLUSTER_IP_RANGE} \
  --service-node-port-range=30000-32767 \
  --tls-cert-file=/kube/etc/tls/${CLUSTER}/kubernetes.pem \
  --tls-private-key-file=/kube/etc/tls/${CLUSTER}/kubernetes-key.pem \
  --token-auth-file=/kube/etc/auth/token.csv \
  --v=2 \
  --runtime-config=settings.k8s.io/v1alpha1
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
