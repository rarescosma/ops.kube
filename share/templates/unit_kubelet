[Unit]
Description=Kubernetes Kubelet
Documentation=https://github.com/GoogleCloudPlatform/kubernetes
After=docker.service
Requires=docker.service

[Service]
ExecStart=/usr/bin/kubelet \
  --logtostderr=true \
  --v=4 \
  --address=${VM_IP} \
  --port=10250 \
  --hostname-override=${VM_HOSTNAME} \
  --allow-privileged=true \
  --api-servers=https://${MASTER0_IP}:6443,https://${MASTER1_IP}:6443 \
  --cluster-dns=10.32.0.10 \
  --cluster-domain=kubernetes.local \
  --container-runtime=docker \
  --docker=unix:///var/run/docker.sock \
  --kubeconfig=/kube/etc/kubelet/kubeconfig \
  --tls-cert-file=/kube/etc/tls/kubernetes.pem \
  --tls-private-key-file=/kube/etc/tls/kubernetes-key.pem

Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
